# Environment Configuration
NODE_ENV=development

# Database
POSTGRES_PASSWORD=cira_secure_password
DATABASE_URL=postgresql://cira_user:cira_secure_password@localhost:5432/cira_db

# Redis
REDIS_PASSWORD=redis_secure_password
REDIS_URL=redis://:redis_secure_password@localhost:6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# JWT Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRY=24h

# API Configuration
API_URL=http://localhost:3000
PORT=3000

# Microsoft 365 Configuration
M365_TENANT_ID=your_tenant_id
M365_CLIENT_ID=your_client_id
M365_CLIENT_SECRET=your_client_secret

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_subscription_id
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret

# IPInfo Configuration (for Analyzer)
IPINFO_TOKEN=your_ipinfo_token

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGIN=http://localhost:80
SESSION_SECRET=your_session_secret_here

# Feature Flags
ENABLE_MFA=true
ENABLE_AUTO_ANALYSIS=true
ENABLE_THREAT_INTEL=false